/*
 * Definition of Fortress top-level declarations.
 */
module Declaration(TraitObject, Function, Variable, Other, Spacing);

import TraitObject;
import Function;
import Variable;
import Other;
import Spacing;

/* Decls ::= Decl (br Decl)* */
List<DefOrDecl> Decls = a1:Decl a2s:(br Decl)*
     { yyValue = new ArrayList<DefOrDecl>();
       yyValue.add(a1);
       yyValue.addAll(a2s.list());
     };

/* Decl ::=
     TraitDecl
   | ObjectDecl
   | VarDecl
   | FnDecl
   | DimUnitDecl
   | TypeAlias
   | TestDecl
   | PropertyDecl
   | ExternalSyntax
*/
private DefOrDecl Decl =
     yyValue:TraitDecl
   / yyValue:ObjectDecl
   / yyValue:VarDecl
   / yyValue:FnDecl
/* ************************************************
 * Not Yet Implemented ***************************
   / yyValue:DimUnitDecl
************************************************ */
   / yyValue:TypeAlias
   / yyValue:TestDecl
   / yyValue:PropertyDecl
   / yyValue:ExternalSyntax ;

/* AbsDecls ::= AbsDecl (br AbsDecl)* */
List<DefOrDecl> AbsDecls = a1:AbsDecl a2s:(br AbsDecl)*
     { yyValue = new ArrayList<DefOrDecl>();
       yyValue.add(a1);
       yyValue.addAll(a2s.list());
     };

/* AbsDecl ::=
     AbsTraitDecl
   | AbsObjectDecl
   | AbsVarDecl
   | AbsFnDecl
   | DimUnitDecl
   | TypeAlias
   | TestDecl
   | PropertyDecl
   | AbsExternalSyntax
 */
private DefOrDecl AbsDecl =
     yyValue:AbsTraitDecl
   / yyValue:AbsObjectDecl
   / yyValue:AbsVarDecl
   / yyValue:AbsFnDecl
/* ************************************************
 * Not Yet Implemented ***************************
   / yyValue:DimUnitDecl
************************************************ */
   / yyValue:TypeAlias
   / yyValue:TestDecl
   / yyValue:PropertyDecl
   / yyValue:AbsExternalSyntax ;
