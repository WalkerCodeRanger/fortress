component fortress.executable
export Executable

fact(x:ZZ32) = do
   if (x = 0) then 1 else x fact(x-1) end
end

assert(y:Boolean) = do
	if (NOT y) then
	     println("Assertion Failed:")
	     throw Error
	end
end

test testFactorial1() = do
   assert(fact(0) = 1)
   assert(fact(5) = 120)
   print("testFactorial1 passed");
end

test testFactorial2() = do
   assert(fact(0) = 1)
   assert(fact(5) = 120)
   print("testFactorial2 passed");
end

test testFactorial3() = do
   assert(fact(0) = 1)
   assert(fact(5) = 120)
   print("testFactorial3 passed");
end

run(args:String...):()=do
	y = fact(10)
	end
end
