component Brackets
export Executable

opr <| x:RR64 |>:String = "<|" x "|>"
opr <<| x:RR64 |>>:String = "<<|" x "|>>"
(* opr |/ x:RR64 \|:String = "|/" x "\\|" *)
(* opr |\ x:RR64 /|:String = "|\\" x  "/|" *)
opr {\ x:RR64 \}:String = "{\\" x "\\}"
opr {/ x:RR64 /}:String = "{/" x "/}"
opr [/ x:RR64 /]:String = "[/" x "/]"
opr [// x:RR64 //]:String = "[//" x "//]"
opr {*/ x:RR64 /*}:String = "{*/" x "/*}"
opr [*/ x:RR64 /*]:String = "[*/" x "/*]"
opr (\ x:RR64 \):String = "(\\" x "\\)"
opr </ x:RR64 \>:String = "</" x "\\>"
opr <</ x:RR64 \>>:String = "<</" x "\\>>"

(* The absolute value and norm operators are defined in the library. *)
(* opr | x:RR64 |:String = "|" x "|"
opr || x:RR64 ||:String = "||" x "||" *)
opr ||| x:RR64 |||:String = "|||" x "|||"

run(Args:String...) = do
  println( <| 2.5 |> )
  println( <<| 2.5 |>> )

(*
  println(⟨ 2.5 ⟩)
  println(⟪ 2.5⟫)
*)

  println(|/ 2.5 \|)
  println(|\ 2.5 /|)

(*
  println(⌈ 2.5 ⌉)
  println(⌊ 2.5 ⌋)
*)

  println({\ 2.5 \})
  println({/ 2.5 /})

  println([/ 2.5 /])
  println([// 2.5 //])

  println({*/ 2.5 /*})
  println([*/ 2.5 /*])


  println((\ 2.5 \))

  println( </ 2.5 \> )
  println( <</ 2.5 \>> )

  println( |-2.5| )
  y : RR64[2] = [ -2.5 0.0 ]
  println( ||y|| )
  println( |||2.5||| )

end

end
