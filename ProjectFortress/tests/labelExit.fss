component fortress.executable
export Executable
(* Testing basic named labels *)
test1()=do
    barney:ZZ32 = 
        label fred
            if true
            then exit fred with 3
            else 7
            end
        end fred
        assert(barney,3,"label failed")
end

(* Testiing nested named labels *)

test2()=do
    barney:ZZ32 = 
        label fred 
            label wilma
                if true
                then exit fred with 3
                else 7
                end
            end wilma
            exit fred with 9
        end fred
        assert(barney,3,"label failed")
end

(* Testing basic anonymous end statements *)

test3()=do
    barney:ZZ32 = 
        label fred
            if true
            then exit with 3
            else 7
            end
        end fred
    assert(barney,3,"label failed")
end
    
run(args:String...):()=do
    test1()
    test2()
    test3()
end
end
